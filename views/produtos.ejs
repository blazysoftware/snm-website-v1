<%- include('partials/header') %>

<!-- Page Header -->
<section class="page-header bg-primary text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-3">🛍️ Nossos Produtos</h1>
                <p class="lead">Conheça nossa linha completa de produtos</p>
            </div>
        </div>
    </div>
</section>

<!-- Products Section -->
<section class="py-5">
    <div class="container">
        <!-- Filter/Search Bar -->
        <div class="row mb-5">
            <div class="col-lg-6 mx-auto">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar produtos..." id="searchInput">
                    <button class="btn btn-primary" type="button">
                        <i>🔍</i> Buscar
                    </button>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="row g-4" id="productsGrid">
            <% produtos.forEach(produto => { %>
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 shadow-sm product-card">
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                        <i class="display-1 text-muted">📦</i>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= produto.nome %></h5>
                        <p class="card-text text-muted flex-grow-1"><%= produto.descricao %></p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary mb-0"><%= produto.preco %></span>
                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm">
                                        <i>👁️</i> Ver
                                    </button>
                                    <button class="btn btn-primary btn-sm">
                                        <i>🛒</i> Comprar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Empty State (quando não há produtos) -->
        <% if (produtos.length === 0) { %>
        <div class="row">
            <div class="col-12 text-center py-5">
                <i class="display-1 text-muted">📦</i>
                <h3 class="mt-3">Nenhum produto encontrado</h3>
                <p class="text-muted">Tente ajustar os filtros de busca</p>
            </div>
        </div>
        <% } %>

        <!-- Load More Button -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <button class="btn btn-outline-primary btn-lg" id="loadMoreBtn">
                    Carregar Mais Produtos
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center mb-4">
            <div class="col-12">
                <h2 class="fw-bold">Categorias</h2>
                <p class="text-muted">Navegue por categorias</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="category-card bg-white p-4 rounded shadow-sm text-center h-100">
                    <i class="display-4 mb-3">💻</i>
                    <h5>Eletrônicos</h5>
                    <p class="text-muted small">25 produtos</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card bg-white p-4 rounded shadow-sm text-center h-100">
                    <i class="display-4 mb-3">👕</i>
                    <h5>Roupas</h5>
                    <p class="text-muted small">18 produtos</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card bg-white p-4 rounded shadow-sm text-center h-100">
                    <i class="display-4 mb-3">🏠</i>
                    <h5>Casa</h5>
                    <p class="text-muted small">32 produtos</p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card bg-white p-4 rounded shadow-sm text-center h-100">
                    <i class="display-4 mb-3">🎮</i>
                    <h5>Games</h5>
                    <p class="text-muted small">15 produtos</p>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>